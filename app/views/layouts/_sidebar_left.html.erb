<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_7790" %>
  </div>
  <h2 class= >New book</h2>
  <form>
  <%= form_with url: books_path, local:true do |f| %>
    <div class="form-group">
      <label for="title">Title</label>
      <%= f.text_field :title, id:"title", class:"form-control" %>
    </div>
    <div class="form-group">
      <label for="body">Opinion</label>
      <%= f.text_area :body, id:"body", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
    <% end %>
  </form>
</div>

