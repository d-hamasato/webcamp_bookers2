<div class="row">
  <div class="col-md-8 mx-auto">
    <%= render "layouts/error_messages", model: @book %>
    <h2>Editing Book</h2>
    <%= form_with model: @book, local:true do |f| %>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        <%= f.text_field :title, id:"title", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="body">Opinion</label>
        <%= f.text_area :body, id:"body", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-success" %>
      </div>
    </form>
    <% end %>
    <%= link_to "Show", book_path(params[:id]) %>
     |
    <%= link_to "Back", books_path %>
  </div>
</div>